<Page x:Class="Autobusy.UI.Pages.GlownyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Autobusy.UI.Pages"
      mc:Ignorable="d"
      Title="GlownyPage" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="2*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		
		<TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Menu Główne"/>
		
		<Button x:Name="DyspozytorButton" Grid.Row="1" Grid.Column="0" Content="Dyspozytor" Click="DyspozytorButton_OnClick"/>
		<Button x:Name="PlanistaButton" Grid.Row="1" Grid.Column="1" Content="Planista" Click="PlanistaButton_OnClick"/>
		<Button x:Name="ZarzadcaButton" Grid.Row="1" Grid.Column="2" Content="Zarządca flotą" Click="ZarzadcaButton_OnClick"/>
		
	</Grid>
</Page>
