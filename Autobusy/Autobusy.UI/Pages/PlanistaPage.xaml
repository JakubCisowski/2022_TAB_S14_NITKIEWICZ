<Page x:Class="Autobusy.UI.Pages.PlanistaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Autobusy.UI.Pages"
      mc:Ignorable="d"
      Title="PlanistaPage" Height="360" Width="700">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="4*"/>
			<RowDefinition Height="2*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		
		<TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Planista" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
		
		<Button Grid.Row="1" Grid.Column="0" Width="150" Content="Dodaj przystanek" Style="{StaticResource MaterialDesignRaisedButton}" HorizontalAlignment="Center"/>
		<ComboBox Grid.Row="1" Grid.Column="1" Width="200" Text="Wybór linii" HorizontalAlignment="Center"/>
		<Button Grid.Row="1" Grid.Column="2" Width="150" Content="Rentowność" Style="{StaticResource MaterialDesignRaisedButton}" HorizontalAlignment="Center"/>
		
		<DataGrid Grid.Column="0" Grid.Row="2" Height="150" Grid.ColumnSpan="3" CanUserAddRows="False" SelectionUnit="Cell" SelectionMode="Extended" ItemsSource="{Binding }">
			
		</DataGrid>
		
		<Button Grid.Column="0" x:Name="BackButton" Grid.Row="3" Grid.ColumnSpan="3" Width="150" Content="Wróć" Click="BackButton_OnClick" Style="{StaticResource MaterialDesignRaisedButton}"/>
		
	</Grid>
</Page>
