<Window x:Class="Autobusy.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Autobusy"
        mc:Ignorable="d" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Title="Autobusy" Height="720" Width="1280" Closing="MainWindow_OnClosing">
    <Grid>
	   <Grid.RowDefinitions>
		   <RowDefinition Height="*"></RowDefinition>
		   <RowDefinition Height="4*"></RowDefinition>	<!-- * = 120px -->
		   <RowDefinition Height="*"></RowDefinition>
	   </Grid.RowDefinitions>
		   
	    <TextBlock Grid.Row="0" Text="Autobusy" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="Bold"/>
	    
	    <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Source="Pages/GlownyPage.xaml" Margin="50,0,50,0" />
	    
	    <TextBlock Grid.Row="2" Text="{Binding Data, StringFormat='{}{0:dd.MM.yy HH:mm}'}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
	    
    </Grid>
</Window>
